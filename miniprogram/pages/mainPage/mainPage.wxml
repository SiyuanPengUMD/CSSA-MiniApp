<view class="container" bindtap="onBgImgClicked">
  <!-- Buttons here -->
  <view class="upperlayer">
      <image src="/images/terp_shell_btn1.png" style="height:{{btnHeight}}px; width:{{btnWidth}}px; float:right; margin-right:{{btnMarginRight}}px; margin-top:{{btnMarginTop1}}px" />
